<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F9F9"
    android:orientation="vertical"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/wealthFamilyTextViewRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/roundrect"
        android:backgroundTint="#F9F9F9"
        android:fontFamily="@font/montserrat"
        android:text="@string/t_wealth_family"
        android:textAlignment="center"
        android:textColor="#1F5CB6"
        android:textSize="23sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/RegistrationLayoutRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wealthFamilyTextViewRegistration"
        android:layout_marginStart="20dip"
        android:layout_marginTop="50dip"
        android:layout_marginEnd="20dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="80dp"
            android:fontFamily="@font/b612_mono"
            android:text="@string/descr_enter_password"
            android:textAlignment="center"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editTextEmailAddressRegistration"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:breakStrategy="simple"
            android:ems="10"
            android:fontFamily="@font/b612_mono"
            android:hint="@string/t_email"
            android:hyphenationFrequency="normal"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/editTextPasswordRegistration2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="****"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editTextPasswordRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="****"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="80dp"
            android:text="@string/descr_repeat_password"
            android:textAlignment="center"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editTextPasswordRegistrationExtra2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="****"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editTextPasswordRegistrationExtra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="****"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="22sp" />

        <Button
            android:id="@+id/acceptButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="120dp"
            android:onClick="onChangePasswordButtonClicked"
            android:text="@string/t_entry" />
    </LinearLayout>

    <Button
        android:id="@+id/enterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RegistrationLayoutRegistration"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:onClick="onEntryButtonClicked"
        android:text="@string/t_was_registered" />
</RelativeLayout>